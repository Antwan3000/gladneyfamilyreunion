= nested_form_for @registrant, :url => '/registration', :method => :post  do |registrant_form|

	= registrant_form.hidden_field :first_name
	= registrant_form.hidden_field :last_name
	= registrant_form.hidden_field :email
	= registrant_form.hidden_field :phone_number
	= registrant_form.hidden_field :kinship
	= registrant_form.hidden_field :shirt_size

	= registrant_form.fields_for :address  do |address_form|
		= address_form.hidden_field :street
		= address_form.hidden_field :city
		= address_form.hidden_field :state
		= address_form.hidden_field :zipcode
	
	= render :partial => 'guest_confirm', :collection => @registrant.guests, :as => :guest
		
	= registrant_form.hidden_field :grand_total
	= registrant_form.hidden_field :payment_trustee
	= registrant_form.hidden_field :init_confirmed	
		
	.actions
		= registrant_form.submit 'Confirm & Register'
