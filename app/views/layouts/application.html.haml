!!! 5
%html
	%head
	
		%meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}/
		%meta{'name' => 'keywords', :content => 'Gladney Family Reunion June 2011 Bruce Mississippi Bud Alice Gladney'}/
		%meta{'name' => 'description', :content => 'The Gladney Family Reunion 2011'}/
		= csrf_meta_tag
		%link{:rel => 'shortcut icon', :href => "#{root_url}/favicon.ico"}
		
		~ "\n"
		
		%title Gladney Family Reunion 2011 | Official Website
		
		= javascript_include_tag 'google_analytics' if Rails.env == "production"
		= javascript_include_tag :defaults, "nested_form", "jquery.lightbox-0.5.min"
		:javascript
			$(function() {$('#gallery a').lightBox();});
		
		= stylesheet_link_tag 'screen', 'jquery.lightbox-0.5', :media => "screen, projection"
		= stylesheet_link_tag 'print', :media => "print"
		
		/[if lte IE 8]			
			:javascript
				document.createElement('header');
				document.createElement('nav');
				document.createElement('section');
				document.createElement('article');
				document.createElement('aside');
				document.createElement('footer');
		
				
	%body#gladney-reunion
	
		#wrapper.container
			
			%header#masthead.span-18
				%a{:href => "#{root_url}"}
					%h1.span-12.left James &amp; Alice Gladney Family Reunion 2011				
			
				#names 
					%p Gladney Decendants
					%p Clarence Gladney
					%p Curtis Gladney
					%p Lucille Gladney-Stephens
					%p Robbie Foster-Gladney
					%p Ruby Gladney
					%p Walter Gladney
					%p Willie Bell Gladney
				
				%ul#location
					%li#cities Bruce &middot; Pittsboro 
					%li#state mississippi
			
				- if admin_signed_in?
					%ul#admin-links
						%li.border
							= link_to 'Dashboard', manage_registrants_path
						%li 
							= link_to 'Logout', logout_path
					
			%nav.span-18
				%ul#menu
					%li 
						= link_to 'Home', root_url
					%li
						= link_to 'Official Letter', letter_url
					%li
						= link_to 'Registration', register_url
					%li
						= link_to 'Hotel', hotel_url
					%li
						= link_to 'Schedule', schedule_url
					%li.last.append-1
						= link_to 'Contact', contact_url, {:class=> 'last'}
			
		
					
			%section#content.span-18
					
				= yield
		
		
		%footer#mastfoot
			%footer#subfooter
				%section.container
					%section#social-media.span-6.right.last
						%h2 Follow Us
						%h3 on Facebook
						= link_to 'Facebook Link', facebook_url, {:id => 'facebook', :target => 'blank'}
			%footer#copyright
				%section.container
					%p.span-6 Copyright &copy; 2011  GladneyFamilyReunion.org
		
		
		
		
			=# render 'shared/footer'
		

